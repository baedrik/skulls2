{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "description": "Queries",
  "anyOf": [
    {
      "description": "display the admin addresses",
      "type": "object",
      "required": [
        "admins"
      ],
      "properties": {
        "admins": {
          "type": "object",
          "properties": {
            "permit": {
              "description": "optional permit used to verify admin identity.  If both viewer and permit are provided, the viewer will be ignored",
              "anyOf": [
                {
                  "$ref": "#/definitions/Permit"
                },
                {
                  "type": "null"
                }
              ]
            },
            "viewer": {
              "description": "optional address and viewing key of an admin",
              "anyOf": [
                {
                  "$ref": "#/definitions/ViewerInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "display the potion contracts",
      "type": "object",
      "required": [
        "potion_contracts"
      ],
      "properties": {
        "potion_contracts": {
          "type": "object",
          "properties": {
            "permit": {
              "description": "optional permit used to verify admin identity.  If both viewer and permit are provided, the viewer will be ignored",
              "anyOf": [
                {
                  "$ref": "#/definitions/Permit"
                },
                {
                  "type": "null"
                }
              ]
            },
            "viewer": {
              "description": "optional address and viewing key of an admin",
              "anyOf": [
                {
                  "$ref": "#/definitions/ViewerInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "display the svg server contracts",
      "type": "object",
      "required": [
        "svg_servers"
      ],
      "properties": {
        "svg_servers": {
          "type": "object",
          "properties": {
            "permit": {
              "description": "optional permit used to verify admin identity.  If both viewer and permit are provided, the viewer will be ignored",
              "anyOf": [
                {
                  "$ref": "#/definitions/Permit"
                },
                {
                  "type": "null"
                }
              ]
            },
            "viewer": {
              "description": "optional address and viewing key of an admin",
              "anyOf": [
                {
                  "$ref": "#/definitions/ViewerInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "display a list of potion names and their indices",
      "type": "object",
      "required": [
        "potions"
      ],
      "properties": {
        "potions": {
          "type": "object",
          "properties": {
            "page": {
              "description": "optional page",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint16",
              "minimum": 0.0
            },
            "page_size": {
              "description": "optional max number of potion IDs to display (defaults to 100)",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint16",
              "minimum": 0.0
            },
            "permit": {
              "description": "optional permit used to verify admin identity.  If both viewer and permit are provided, the viewer will be ignored",
              "anyOf": [
                {
                  "$ref": "#/definitions/Permit"
                },
                {
                  "type": "null"
                }
              ]
            },
            "viewer": {
              "description": "optional address and viewing key of an admin",
              "anyOf": [
                {
                  "$ref": "#/definitions/ViewerInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "display the definition of the specified potion",
      "type": "object",
      "required": [
        "potion_info"
      ],
      "properties": {
        "potion_info": {
          "type": "object",
          "properties": {
            "index": {
              "description": "optional index of the potion to display.  If neither name nor index is provided, the query will throw an error",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint16",
              "minimum": 0.0
            },
            "name": {
              "description": "optional name of the potion to display",
              "type": [
                "string",
                "null"
              ]
            },
            "permit": {
              "description": "optional permit used to verify admin identity.  If both viewer and permit are provided, the viewer will be ignored",
              "anyOf": [
                {
                  "$ref": "#/definitions/Permit"
                },
                {
                  "type": "null"
                }
              ]
            },
            "viewer": {
              "description": "optional address and viewing key of an admin",
              "anyOf": [
                {
                  "$ref": "#/definitions/ViewerInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "Binary": {
      "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>",
      "type": "string"
    },
    "HumanAddr": {
      "type": "string"
    },
    "Permission": {
      "type": "string",
      "enum": [
        "allowance",
        "balance",
        "history",
        "owner"
      ]
    },
    "Permit": {
      "type": "object",
      "required": [
        "params",
        "signature"
      ],
      "properties": {
        "params": {
          "$ref": "#/definitions/PermitParams"
        },
        "signature": {
          "$ref": "#/definitions/PermitSignature"
        }
      }
    },
    "PermitParams": {
      "type": "object",
      "required": [
        "allowed_tokens",
        "chain_id",
        "permissions",
        "permit_name"
      ],
      "properties": {
        "allowed_tokens": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HumanAddr"
          }
        },
        "chain_id": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Permission"
          }
        },
        "permit_name": {
          "type": "string"
        }
      }
    },
    "PermitSignature": {
      "type": "object",
      "required": [
        "pub_key",
        "signature"
      ],
      "properties": {
        "pub_key": {
          "$ref": "#/definitions/PubKey"
        },
        "signature": {
          "$ref": "#/definitions/Binary"
        }
      }
    },
    "PubKey": {
      "type": "object",
      "required": [
        "type",
        "value"
      ],
      "properties": {
        "type": {
          "description": "ignored, but must be \"tendermint/PubKeySecp256k1\" otherwise the verification will fail",
          "type": "string"
        },
        "value": {
          "description": "Secp256k1 PubKey",
          "allOf": [
            {
              "$ref": "#/definitions/Binary"
            }
          ]
        }
      }
    },
    "ViewerInfo": {
      "description": "the address and viewing key making an authenticated query request",
      "type": "object",
      "required": [
        "address",
        "viewing_key"
      ],
      "properties": {
        "address": {
          "description": "querying address",
          "allOf": [
            {
              "$ref": "#/definitions/HumanAddr"
            }
          ]
        },
        "viewing_key": {
          "description": "authentication key string",
          "type": "string"
        }
      }
    }
  }
}
