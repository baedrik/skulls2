{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleAnswer",
  "description": "Responses from handle functions",
  "anyOf": [
    {
      "description": "response of both AddAdmins and RemoveAdmins",
      "type": "object",
      "required": [
        "admins_list"
      ],
      "properties": {
        "admins_list": {
          "type": "object",
          "required": [
            "admins"
          ],
          "properties": {
            "admins": {
              "description": "current admins",
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "description": "response from creating a viewing key",
      "type": "object",
      "required": [
        "viewing_key"
      ],
      "properties": {
        "viewing_key": {
          "type": "object",
          "required": [
            "key"
          ],
          "properties": {
            "key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "revoke_permit"
      ],
      "properties": {
        "revoke_permit": {
          "type": "object",
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "retrieve_nft"
      ],
      "properties": {
        "retrieve_nft": {
          "type": "object",
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "response from selecting NFTs",
      "type": "object",
      "required": [
        "raffle"
      ],
      "properties": {
        "raffle": {
          "type": "object",
          "required": [
            "partner",
            "skulls"
          ],
          "properties": {
            "partner": {
              "description": "number of partner NFTs selected",
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            },
            "skulls": {
              "description": "number of skulls selected",
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    }
  }
}
